<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MecNicaMauiLogin.MainPage"
             Title="MEC Nicaragua">

    <Grid RowDefinitions="Auto,*">
        <Grid Padding="10" BackgroundColor="#ffffff" ColumnDefinitions="*,Auto">
            <Label Text="MEC Nicaragua" FontAttributes="Bold" FontSize="16" VerticalTextAlignment="Center" />
            <Button Grid.Column="1" Text="Recargar" Clicked="OnReloadClicked" />
        </Grid>

        <Grid Grid.Row="1">
            <WebView x:Name="LoginWebView"
                     Navigating="OnNavigating"
                     Navigated="OnNavigated" />
            <Grid x:Name="LoadingOverlay" BackgroundColor="#80000000" IsVisible="False">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <ActivityIndicator IsRunning="True" IsVisible="True" />
                    <Label Text="Cargando..." TextColor="White" />
                </StackLayout>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
